{% extends 'base.html.twig' %}
{% block menu %}
    <a href="{{ path('person_index') }}" class="btn btn-outline-info">Back to the list</a>
{% endblock %}
{% block body %}
    <section class="bg-white">
        <div class="columns-block container">
            <div class="row m-5">
                <div class="col-3 text-center">
                    <div class="profile-img">
                        <img src="{{ asset('uploads/pictures/' ~ person.picture|default('default.png')) }}"
                             class="img-responsive" alt="{{ person.firstname ~ ' ' ~ person.lastname }}" width="200"
                             height="200">
                    </div>
                    <div class="content">
                        <h1>{{ person.firstname ~ ' ' ~ person.lastname }}</h1>
                        <span class="text-info">Birthday: {{ person.birthday }}</span>
                    </div>
                </div>
                <div class="col-9">
                    <section class="section-contact section-wrapper gray-bg">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="section-title">
                                        <h2>Contact #{{ person.id }}</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <address>
                                        <strong>Address</strong><br>
                                        {% if person.address %}{{ person.address }}<br>{% endif %}
                                        {% if person.city %}{{ person.city }}<br>{% endif %}
                                        ZIP {{ person.zipcode }}<br>
                                        {% if person.country %}{{ person.country|country }}<br>{% endif %}
                                    </address>
                                    <address>
                                        <strong>Phone Number</strong><br>
                                        {{ person.phone }}
                                    </address>
                                    <address>
                                        <strong>Email</strong><br>
                                        <a href="mailto:#">{{ person.email }}</a>
                                    </address>
                                </div>
                                <div class="col-md-12">
                                    {{ form_start(delete_form) }}
                                    <input class="btn btn-danger" type="submit" value="Delete">
                                    {{ form_end(delete_form) }}
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
